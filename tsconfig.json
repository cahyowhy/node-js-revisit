{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "rootDir": "./src",
        "outDir": "./build",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "moduleResolution": "node",
        "lib": [
            "esnext"
        ],
    },
    "include": [
        "./src/**/*.ts"
    ],
    "exclude": [
        "./build/",
        "./node_modules/"
    ],
}